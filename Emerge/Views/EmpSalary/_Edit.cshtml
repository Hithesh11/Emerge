            <div class="modal-footer justify-content-center">
                <button type="submit" style="font-size: 12px; padding: 5px 10px;" class="btn btn-primary">Update</button>
                <button type="button" style="font-size: 12px; padding: 5px 10px;" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
    </div>
</form>
</div></div>

<script>
    // JavaScript function to handle the "Edit" link click
    $(document).ready(function () {
        $('a[data-toggle="modal"]').on('click', function () {
            var id = $(this).data('id'); // Get the value of data-id attribute
                                               
                                 
            $('#SalaryId').val(id);
            $('#EmpCode1').val($(this).data('empcode'));

            $('#EmpName1').val($(this).data('empname'));
            $('#Gender1').val($(this).data('gender'));

            // Set the Doj field using JavaScript
            var doj = new Date($(this).data('doj'));
            var dojFormatted = doj.toISOString().split('T')[0] + 'T' + doj.toTimeString().split(' ')[0];
            $('#Doj1').val(dojFormatted);

          



            $('#BankName1').val($(this).data('bankname'));
            $('#AccNo1').val($(this).data('accno'));
            $('#PayMode1').val($(this).data('paymode'));
            $('#Basic1').val($(this).data('basic'));
            $('#Hra1').val($(this).data('hra'));
            $('#MedAllowance1').val($(this).data('medallowance'));
            $('#ConAllowance1').val($(this).data('conallowance'));
            $('#FlexiAllowance1').val($(this).data('flexiallowance'));
            $('#ProvidentFund1').val($(this).data('providentfund'));
            $('#Tds1').val($(this).data('tds'));
            $('#ProfTax1').val($(this).data('proftax'));
            $('#Lop1').val($(this).data('lop'));
            $('#EmpName1').val($(this).data('empname'));
            $('#FlexiAllowance1').val($(this).data('flexiallowance'));
            $('#Department1').val($(this).data('department'));
            $('#PayPeriod1').val($(this).data('payperiod'));
            $('#Position1').val($(this).data('position'));
            $('#NetPay1').val($(this).data('netpay'));
            $('#Month1').val($(this).data('month'));
            $('#Year1').val($(this).data('year'));
        });
    });
</script>
