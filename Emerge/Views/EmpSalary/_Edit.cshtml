        </div>
    <div class="form-row">

    <div class="form-group col-md-4">
        <label asp-for="ConAllowance" class="control-label">ConAllowance</label>
        <input asp-for="ConAllowance" id="ConAllowance1" name="ConAllowance" class="form-control" />
        <span asp-validation-for="ConAllowance" class="text-danger"></span>
