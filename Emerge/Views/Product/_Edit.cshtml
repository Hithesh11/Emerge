@model Emerge.Models.Product


<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content" style="width: 600px; padding: 30px;">
        <form asp-action="Edit" method="post">
    <input asp-for="Id" id="Id1" name="Id" type="hidden"  />
    <div class="form-group">
      
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" id="Name1" name="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
 
    <div class="form-group">
        <label asp-for="FrequencyId" class="control-label">FrequencyId</label>
        <input asp-for="FrequencyId" id="FrequencyId1" name="FrequencyId" class="form-control" />
        <span asp-validation-for="FrequencyId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Amount" class="control-label">Amount</label>
        <input asp-for="Amount" id="Amount1" name="Amount" class="form-control" />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClientId" class="control-label">ClientId</label>
        <input asp-for="ClientId" id="ClientId1" name="ClientId" class="form-control" />
        <span asp-validation-for="ClientId" class="text-danger"></span>
    </div>

            <div class="modal-footer justify-content-center">
                <button type="submit" style="font-size: 12px; padding: 5px 10px;" class="btn btn-primary">Update</button>
                <button type="button" style="font-size: 12px; padding: 5px 10px;" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
</form>
</div></div>

<script>
    // JavaScript function to handle the "Edit" link click
    $(document).ready(function () {
        $('a[data-toggle="modal"]').on('click', function () {
            var id = $(this).data('id'); // Get the value of data-id attribute
            $('#Id1').val(id);
         
            $('#Name1').val($(this).data('name'));
            $('#FrequencyId1').val($(this).data('frequencyid'));
            $('#Amount1').val($(this).data('amount'));
            $('#ClientId1').val($(this).data('clientid'));
           
            
          
               
        });
    });
</script>
