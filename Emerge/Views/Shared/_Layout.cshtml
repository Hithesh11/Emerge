<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Emerge</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Emerge.styles.css" asp-append-version="true" />
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Bootstrap JS (popper.js is optional) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">



</head>
<body>
   
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Emerge</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            @*    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Authentication" asp-action="Login">Login</a>
                        </li>*@
                            <li class="nav-item dropdown">
                                <!-- Add "dropdown" class to create a dropdown menu -->
                                <a class="nav-link text-dark dropdown-toggle" href="#" id="leaveDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    LMS <!-- Change the text of the dropdown toggle button -->
                                </a>
                                <div class="dropdown-menu" aria-labelledby="leaveDropdown">
                                    <!-- Dropdown menu content -->
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Leave" asp-action="Index">Leave Editor</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="LevReq" asp-action="Index">LeaveRequest</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="LevAllo" asp-action="Index">LeaveAllocation</a>
                                    <!-- Add more dropdown items if needed -->
                                </div>
                            </li>


                        <li class="nav-item dropdown">
                            <!-- Add "dropdown" class to create a dropdown menu -->
                            <a class="nav-link text-dark dropdown-toggle" href="#" id="leaveDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                EMS <!-- Change the text of the dropdown toggle button -->
                            </a>
                            <div class="dropdown-menu" aria-labelledby="leaveDropdown">
                                <!-- Dropdown menu content -->
                                <a class="nav-link text-dark" asp-area="" asp-controller="EmpSalary" asp-action="Index">Manage Eemployees</a>
                                <a class="nav-link text-dark" asp-area="" asp-controller="Register" asp-action="Register">Register</a>

                            </div>
                        </li>



                            <li class="nav-item dropdown">
                                <!-- Add "dropdown" class to create a dropdown menu -->
                                <a class="nav-link text-dark dropdown-toggle" href="#" id="leaveDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    AMS <!-- Change the text of the dropdown toggle button -->
                                </a>
                                <div class="dropdown-menu" aria-labelledby="leaveDropdown">
                                    <!-- Dropdown menu content -->
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Accounts" asp-action="Index">Accounts</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Billing" asp-action="Index">Billing</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Currency" asp-action="Index">Currency</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Clients" asp-action="Index">Clients</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Company" asp-action="Index">Company</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Product" asp-action="Index">Product</a>
                                    <!-- Add more dropdown items if needed -->
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Authentication" asp-action="Logout">Logout</a>
                            </li>

                        </ul>
                    </div>
                </div>
            </nav>
        </header>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    
        

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Emerge - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
