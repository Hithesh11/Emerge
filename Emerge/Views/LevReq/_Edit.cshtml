<script>
    $(document).ready(function () {
        $('a[data-toggle="modal"]').on('click', function () {
            var id = $(this).data('id');
            $('#leaveId').val(id);
           
            var startdate = new Date($(this).data('startdate'));
            var sdFormatted = startdate.toISOString().split('T')[0] + 'T' + startdate.toTimeString().split(' ')[0];
            $('#StartDate1').val(sdFormatted);

            var enddate = new Date($(this).data('enddate'));
            var edFormatted = enddate.toISOString().split('T')[0] + 'T' + enddate.toTimeString().split(' ')[0];
            $('#EndDate1').val(edFormatted);
       
          
            $('#leaveTypeId1').val($(this).data('leavetypeid'));

            var daterequested = new Date($(this).data('daterequested'));
            var drFormatted = daterequested.toISOString().split('T')[0] + 'T' + daterequested.toTimeString().split(' ')[0];
            $('#DateRequested1').val(drFormatted);
           
            $('#requestcomments1').val($(this).data('requestcomments'));
            $('#approved1').val($(this).data('approved'));
            $('#cancelled1').val($(this).data('cancelled'));
            $('#requestingEmployeeId1').val($(this).data('requestingemployeeid'));
         
        });
    });

</script>
