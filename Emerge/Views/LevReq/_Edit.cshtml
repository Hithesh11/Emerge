        <label asp-for="startDate" class="control-label">Start Date</label>
                    <input asp-for="startDate" id="StartDate1" name="startDate" class="form-control" required />
        <span asp-validation-for="startDate" class="text-danger"></span>
    </div>


            <div class="form-group col-md-6">
        <label asp-for="endDate" class="control-label">End Date</label>
                    <input asp-for="endDate" id="EndDate1" name="endDate" class="form-control" required />
        <span asp-validation-for="endDate" class="text-danger"></span>
    </div>
    </div>
            <div class="form-row">
            <div class="form-group col-md-6">
        <label asp-for="leaveTypeId" class="control-label">Leave Type Id</label>
                    <input asp-for="leaveTypeId" id="leaveTypeId1" name="leaveTypeId" class="form-control" required />
        <span asp-validation-for="leaveTypeId" class="text-danger"></span>
    </div>

            <div class="form-group col-md-6">
        <label asp-for="dateRequested" class="control-label">Date Requested</label>
                    <input asp-for="dateRequested" id="DateRequested1" name="dateRequested" class="form-control" required />
        <span asp-validation-for="dateRequested" class="text-danger"></span>
    </div>
    </div>

            <div class="form-group">
        <label asp-for="requestComments" class="control-label">Request Comments</label>
                <input asp-for="requestComments" id="requestcomments1" name="requestComments" class="form-control" required />
        <span asp-validation-for="requestComments" class="text-danger"></span>
    </div>
