@model Emerge.Models.LeaveAllocation

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content" style="width: 600px; padding: 30px;">

        <!-- Create Leave Form -->
                <form asp-action="Create" method="post">
                    <!-- Leave form fields here -->
   
                    <div class="form-group">
                <label asp-for="LeaveTypeId" class="control-label">Leave Type</label>
                <input asp-for="LeaveTypeId" class="form-control" required />
                <span asp-validation-for="LeaveTypeId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                <label asp-for="EmployeeId" class="control-label">Employee Id</label>
                <input asp-for="EmployeeId" class="form-control" required />
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                <label asp-for="NumberOfDays" class="control-label">No. of Days</label>
                <input asp-for="NumberOfDays" class="form-control" required />
                <span asp-validation-for="NumberOfDays" class="text-danger"></span>
                    </div>





            <div class="modal-footer justify-content-center">
                    <!-- Create and Cancel buttons -->
                <button type="submit" style="font-size: 12px; padding: 5px 10px;" class="btn btn-primary">Create</button>
                <button type="button" style="font-size: 12px; padding: 5px 10px;" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    </div>
                </form>
                <!-- End Create Leave Form -->
            </div>
        </div>
   