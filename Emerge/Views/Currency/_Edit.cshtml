@model Emerge.Models.Currency
<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content" style="width: 600px; padding: 30px;">
        <form asp-action="Edit" method="post">
    <input asp-for="Id" id="Id1" name="Id" type="hidden"  />
    <div class="form-group">
     
        <label asp-for="Name" class="control-label">Name</label>
        <input asp-for="Name" id="Name1" name="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Code" class="control-label">Code</label>
        <input asp-for="Code" id="Code1" name="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Abbreviation" class="control-label">Abbreviation</label>
        <input asp-for="Abbreviation" id="Abbreviation1" name="Abbreviation" class="form-control" />
        <span asp-validation-for="Abbreviation" class="text-danger"></span>
    </div>

            <div class="modal-footer justify-content-center">
                <button type="submit" style="font-size: 12px; padding: 5px 10px;" class="btn btn-primary">Update</button>
                <button type="button" style="font-size: 12px; padding: 5px 10px;" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
    </div>
</form>
</div></div>

<script>
    // JavaScript function to handle the "Edit" link click
    $(document).ready(function () {
        $('a[data-toggle="modal"]').on('click', function () {
            var id = $(this).data('id'); // Get the value of data-id attribute
            $('#Id1').val(id);
           
            $('#Name1').val($(this).data('name'));
            $('#Code1').val($(this).data('code'));
            $('#Abbreviation1').val($(this).data('abbreviation'));
           
            
          
               
        });
    });
</script>
